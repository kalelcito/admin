{% block extends %}
    {{ "{% extends '@Admin/layout.html.twig' %}" }}
{% endblock extends %}

{{ "{% block stylesheets %}" }}
    {{ "{{ parent() }}" }}
    <link href="{{  "{{ asset('admin/plugins/icheck/vendors.css') }}" }}" rel="stylesheet" type="text/css" />
    <link href="{{  "{{ asset('admin/plugins/icheck/app.css') }}" }}" rel="stylesheet" type="text/css" />
    <link href="{{  "{{ asset('admin/plugins/icheck/icheck.css') }}" }}" rel="stylesheet" type="text/css" />
    <link href="{{  "{{ asset('admin/plugins/icheck/custom.css') }}" }}" rel="stylesheet" type="text/css" />
    <link href="{{  "{{ asset('admin/plugins/icheck/checkboxes-radios.css') }}" }}" rel="stylesheet" type="text/css" />
{{ "{% endblock %}" }}

{{ "{% block javascripts %}" }}
    {{ "{{ parent() }}" }}
    <script src="{{  "{{ asset('admin/plugins/icheck/icheck.min.js') }}" }}"></script>
    <script src="{{  "{{ asset('admin/plugins/icheck/checkbox-radio.js') }}" }}"></script>
{{ "{% endblock %}" }}

{% block body %}
    {{ "{% block body %}" }}

    <section id="description-list-alignment">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Editar Registro</h4>
                        <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="card-text">
                                <div class="col-sm-12 white-box skin skin-square">
                                    {{ "{% form_theme edit_form '@Admin/form/ci_bootstrap_3_horizontal_layout.html.twig' %}" }}
                                    {{ '{{ form_start(edit_form) }}' }}
                                    {{ '{{ form_widget(edit_form) }}' }}
                                    {% set hide_edit, hide_delete = true, true %}
                                    {{ include('crud/views/others/footerform_actions.html.twig.twig') -}}
                                    <button type="submit" class="btn btn-success round btn-min-width mr-1 mb-1">Guardar</button>
                                    {{ '{{ form_end(edit_form) }}' }}
                                    {{ '{{ form_start(delete_form) }}' }}
                                    <button type="submit" class="btn btn-danger round btn-min-width mr-1 mb-1">Borrar</button>
                                    {{ '{{ form_end(delete_form) }}' }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ "{% endblock %}" }}
{% endblock body %}
